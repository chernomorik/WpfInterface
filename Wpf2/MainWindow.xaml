<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <Slider Minimum="8" Maximum="30" x:Name="SliderFontSize"></Slider>
        <TextBlock x:Name="Message" FontSize="{Binding ElementName=SliderFontSize, Path=Value}">
         Пример WPF-приложения для демонстрации привязки данных
        </TextBlock>
        
        <TextBox x:Name="t1" Text="{Binding ElementName=t2, Path=FontSize}" />
        <TextBox x:Name="t2" Text="{Binding ElementName=t3, Path=Text}" />
        <TextBox x:Name="t3" Text="{Binding ElementName=slider2,Path=Value}"/>
        <Slider x:Name="slider1" Value="{Binding ElementName=slider2, Path=Value}" />
        <Slider x:Name="slider2" Value="{Binding ElementName=t3, Path=Text}" />
    </StackPanel>
</Window>
